# COMPUTE NODES
{% if groups['ophidia_computes'] is defined %}
{% for host in groups['ophidia_computes'] %}
NodeName={{ hostvars[host].ansible_hostname }} State=UNKNOWN
{% endfor %}
PartitionName={{ ophidia_slurm_partition }} Nodes={% for host in groups['ophidia_computes'] %}{{ hostvars[host].ansible_hostname }},{%endfor%} MaxTime=INFINITE State=UP Default=YES Shared=NO
{% endif %}
{% if groups['ophidia_computes_ios'] is defined %}
{% for host in groups['ophidia_computes_ios'] %}
